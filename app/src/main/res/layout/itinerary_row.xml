<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/card"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itineraryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:text="Joglosemarkerto"
                android:textColor="@color/secondaryText"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:textAlignment="textEnd">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/trainCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp"
                        android:textColor="@color/secondaryText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itineraryCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:lineSpacingExtra="12sp"
                        android:text="149.000"
                        android:textColor="#59597c"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/itinerarySisa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="0sp"
                    android:text="Sisa 2"
                    android:textColor="#eb5757"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itineraryFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2sp"
                    android:text="PWT"
                    android:textColor="#88879c"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itineraryFromTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="6sp"
                    android:text="14.00"
                    android:textColor="#88879c"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="12dp"
                    app:srcCompat="@drawable/circle_gray" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="12dp"
                    android:layout_height="2dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rounded_rect_small" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="12dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rounded_rect_small" />


                <ImageView
                    android:id="@+id/imageView10a"
                    android:layout_width="12dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rounded_rect_small" />


                <ImageView
                    android:id="@+id/imageView10b"
                    android:layout_width="12dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rounded_rect_small" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="12dp"
                    android:layout_height="2dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/rounded_rect_small" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginHorizontal="12dp"
                    app:srcCompat="@drawable/cirlce_blue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/itineraryTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2sp"
                    android:text="SLO"
                    android:textColor="#88879c"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/itineraryToTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.02"
                    android:lineSpacingExtra="6sp"
                    android:text="18.35"
                    android:textColor="#88879c"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itineraryTravelClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/light_orange_background"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="0sp"
                android:padding="8dp"
                android:text="Ekonomi-A"
                android:textColor="#f47814"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itineraryTravelClassInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="6sp"
                android:text="6 jam 35 menit"
                android:textColor="#88879c"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Space
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:focusable="false"
                android:focusableInTouchMode="false" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>